        std.debug.print("‚òÅÔ∏è  Using AWS S3: {s} in {s}\n", .{bucket, region});
    }
    {{/if}}

    {{#if with_azure}}
    if (ctx.get("azure-account")) |account| {
        const container = ctx.get("azure-container").?;
        std.debug.print("‚òÅÔ∏è  Using Azure: {s}/{s}\n", .{account, container});
    }
